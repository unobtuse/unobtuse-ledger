# =============================================================================
# Unobtuse Ledger - Environment Configuration
# =============================================================================

APP_NAME="Unobtuse Ledger"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database (Supabase PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=your-supabase-host.pooler.supabase.com
DB_PORT=6543
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session & Cache
SESSION_DRIVER=redis
CACHE_STORE=redis
QUEUE_CONNECTION=redis

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL="${APP_URL}/auth/google/callback"

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@unobtuse.com"
MAIL_FROM_NAME="${APP_NAME}"

# Plaid API (Phase 1B)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENVIRONMENT=sandbox
PLAID_WEBHOOK_URL="${APP_URL}/api/plaid/webhook"
PLAID_REDIRECT_URI="${APP_URL}/accounts/link/callback"
PLAID_WEBHOOK_VERIFICATION_ENABLED=true
PLAID_WEBHOOK_VERIFICATION_KEY_URL=

# Google Vision API (Phase 2)
GOOGLE_VISION_API_KEY=

# OpenAI API (Phase 2)
OPENAI_API_KEY=

# Sentry (Error Tracking)
SENTRY_LARAVEL_DSN=

LOG_CHANNEL=stack
LOG_LEVEL=debug
